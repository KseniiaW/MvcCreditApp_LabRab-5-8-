@model MvcCreditApp.Models.Credit

@{
    ViewData["Title"] = "Детали кредита";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Детали кредита</h1>

<div>
    <h4>Кредит</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Название кредита
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Head)
        </dd>
        <dt class="col-sm-2">
            Срок кредита (мес.)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Period)
        </dd>
        <dt class="col-sm-2">
            Максимальная сумма
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Sum)
        </dd>
        <dt class="col-sm-2">
            Процентная ставка (%)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Procent)
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model?.CreditId">Редактировать</a> |
    <a asp-action="Index">Вернуться к списку</a>
</div>