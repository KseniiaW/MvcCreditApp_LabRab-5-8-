@model MvcCreditApp.Models.Credit

@{
    ViewData["Title"] = "Создание кредита";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Создание кредита</h1>

<h4>Кредит</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Head" class="control-label">Название кредита</label>
                <input asp-for="Head" class="form-control" />
                <span asp-validation-for="Head" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Period" class="control-label">Срок кредита (мес.)</label>
                <input asp-for="Period" class="form-control" />
                <span asp-validation-for="Period" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Sum" class="control-label">Максимальная сумма</label>
                <input asp-for="Sum" class="form-control" />
                <span asp-validation-for="Sum" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Procent" class="control-label">Процентная ставка (%)</label>
                <input asp-for="Procent" class="form-control" />
                <span asp-validation-for="Procent" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Создать" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Вернуться к списку</a>
</div>